<zk>
    <style>
        .important .z-label{
        font-weight: bold;
        }
    </style>
    <div id="main" apply="org.zkoss.zktest.test2.DateboxTimezoneComposer">
        <timer id="uiUpdateTimer" repeats="true" delay="10000"></timer>
        <vlayout>
            <hlayout valign="bottom">
                set from client
                <datebox id="userInputDatebox" width="300px"></datebox>
                <searchbox id="timeZoneSearchBox" width="300px" autoclose="true"></searchbox>
                <button id="cleardb" label="clear datebox value"/>
                <checkbox label="show time controls in datebox" id="timeControlCheck" checked="true"/>
            </hlayout>
            <hlayout>
                <button label="populate date time from server" id="serverDate"/>
                <datebox readonly="true" id="serverDatebox" disabled="true" width="300px"/>
            </hlayout>
            <grid hflex="1">
                <columns>
                    <column label="title" />
                    <column label="client" />
                    <column label="server" />
                </columns>
                <rows>
                    <row sclass="important">
                        <cell><label value="Local Timestamp" /></cell>
                        <cell><label id="userToUser" /></cell>
                        <cell><label id="serverToServer" /></cell>
                    </row>
                    <row sclass="important">
                        <cell><label value="As Seen by the Other Party" /></cell>
                        <cell><label id="userToServer" /></cell>
                        <cell><label id="serverToUser" /></cell>
                    </row>
                    <row>
                        <cell><label value="Locale" /></cell>
                        <cell><label id="userLocal" /></cell>
                        <cell /> <!-- server 沒有 locale -->
                    </row>
                    <row>
                        <cell><label value="Local Timezone" /></cell>
                        <cell><label id="userLocalTimeZone" /></cell>
                        <cell><label id="serverLocal" /></cell>
                    </row>
                    <row>
                        <cell><label value="Local Offset from GMT" /></cell>
                        <cell><label id="userLocalGmtOffset" /></cell>
                        <cell><label id="serverLocalGmtOffset" /></cell>
                    </row>
                    <row>
                        <cell><label value="GMT+0 Timestamp" /></cell>
                        <cell><label id="userToGmt" /></cell>
                        <cell><label id="serverToGmt" /></cell>
                    </row>
                    <row>
                        <cell><label value="LocalDateTime" /></cell>
                        <cell><label id="userLocalToUser" /></cell>
                        <cell /> <!-- server 無對應資料 -->
                    </row>
                </rows>
            </grid>

        </vlayout>
    </div>
</zk>